<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/spnMapType"
                android:entries="@array/tipusMapa"
                android:layout_weight="2">
            </Spinner>

            <Switch
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/animacio"
                android:id="@+id/btnAnimacio"
                android:layout_weight="2"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Centrar"
                android:id="@+id/btnCentrar"
                android:layout_weight="2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <EditText
                android:text=""
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/edText_cercador"
                android:textAlignment="center"
                android:layout_weight="0.66"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Cercar"
                android:id="@+id/btn_Cercar"
                android:layout_weight="0.33"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp">

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/progressBar"
                android:indeterminate="false"
                android:visibility="visible"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>



    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.impl.activities.MapsActivity" />


</LinearLayout>
